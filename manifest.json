{
  "manifest_version": 3,
  "name": "Hugging Face Summarizer",
  "version": "1.0",
  "description": "Summarize page text using Hugging Face API",
  "permissions": [
    "activeTab",
    "scripting","storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon48.jpg"
    }
  },
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }
],
 "host_permissions": [
    "https://router.huggingface.co/*"
  ]
}
